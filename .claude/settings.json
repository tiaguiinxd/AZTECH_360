{
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npx tsc:*)",
      "Bash(docker-compose:*)",
      "Bash(docker:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(curl:*)",
      "Bash(netstat:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(mkdir:*)",
      "Bash(rm -f:*)",
      "Bash(cat:*)",
      "Bash(sleep:*)",
      "Bash(echo:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Hook] Arquivo modificado - considere rodar type-check'",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Hook] Verificando arquivo antes de editar...'",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "model": "sonnet",
  "agents": {
    "architect": {
      "path": ".claude/agents/architect.md"
    },
    "frontend": {
      "path": ".claude/agents/frontend.md"
    },
    "testing": {
      "path": ".claude/agents/testing.md"
    },
    "reviewer": {
      "path": ".claude/agents/reviewer.md"
    }
  }
}
